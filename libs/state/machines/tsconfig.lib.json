{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["node", "vite/client"],
    "composite": true,
    "tsBuildInfoFile": "../../../dist/out-tsc/state-machines.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx"
  ],
  "references": [
    { "path": "../../core/types/tsconfig.lib.json" },
    { "path": "../../core/utils/tsconfig.lib.json" }
  ]
}
