{
  "name": "@nasnet/core-forms",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/forms/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:core"],
  "targets": {
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/libs/core/forms"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/libs/core/forms"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/core/forms/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project libs/core/forms/tsconfig.lib.json",
          "tsc --noEmit --project libs/core/forms/tsconfig.spec.json",
          "tsc --noEmit --project libs/core/forms/tsconfig.storybook.json"
        ],
        "parallel": true
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run @nasnet/core-forms:typecheck",
          "nx run @nasnet/core-forms:lint"
        ],
        "parallel": true
      }
    }
  }
}
