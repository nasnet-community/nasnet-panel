{
  "name": "ui-primitives",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/primitives/src",
  "projectType": "library",
  "tags": ["scope:ui", "scope:ui-primitives", "type:lib"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/primitives"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/ui/primitives"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "libs/ui/primitives/**/*.{ts,tsx,js,jsx}",
          "libs/ui/primitives/.storybook/**/*.{ts,tsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project libs/ui/primitives/tsconfig.lib.json",
          "tsc --noEmit --project libs/ui/primitives/tsconfig.spec.json",
          "tsc --noEmit --project libs/ui/primitives/tsconfig.storybook.json",
          "tsc --noEmit --project libs/ui/primitives/.storybook/tsconfig.json"
        ],
        "parallel": true
      }
    },
    "typecheck:storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project libs/ui/primitives/.storybook/tsconfig.json"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run ui-primitives:typecheck",
          "nx run ui-primitives:lint"
        ],
        "parallel": true
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "storybook dev -p 4400 -c libs/ui/primitives/.storybook"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/storybook/ui-primitives"],
      "options": {
        "command": "storybook build -c libs/ui/primitives/.storybook -o dist/storybook/ui-primitives"
      }
    }
  }
}
