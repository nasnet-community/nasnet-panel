{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "vite/client"],
    "composite": false,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "../../../dist/out-tsc/ui-patterns.tsbuildinfo",
    "rootDir": "../..",
    "baseUrl": ".",
    "paths": {
      "@nasnet/ui/*": ["../*/src"],
      "@nasnet/core/*": ["../../core/*/src"],
      "@nasnet/state/*": ["../../state/*/src"],
      "@nasnet/api-client/generated": ["../../api-client/generated"],
      "@nasnet/api-client/generated/types": ["../../api-client/generated/types"],
      "@nasnet/api-client/*": ["../../api-client/*/src"],
      "@nasnet/features/*": ["../../features/*/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/__test-utils__/**",
    "src/test/**"
  ],
  "references": []
}
