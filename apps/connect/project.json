{
  "$schema": "https://json.schemastore.org/nx-project.json",
  "name": "connect",
  "projectType": "application",
  "root": "apps/connect",
  "sourceRoot": "apps/connect/src",
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "connect:build",
        "cwd": "apps/connect"
      },
      "configurations": {
        "development": {
          "buildTarget": "connect:build"
        }
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{workspaceRoot}/dist/apps/connect"],
      "options": {
        "outputPath": "dist/apps/connect",
        "cwd": "apps/connect"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/connect/**/*.{ts,tsx,js,jsx}",
          "apps/connect/.storybook/**/*.{ts,tsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project apps/connect/tsconfig.app.json",
          "tsc --noEmit --project apps/connect/tsconfig.spec.json",
          "tsc --noEmit --project apps/connect/tsconfig.storybook.json",
          "tsc --noEmit --project apps/connect/.storybook/tsconfig.json"
        ],
        "parallel": true
      }
    },
    "typecheck:storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project apps/connect/.storybook/tsconfig.json"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run connect:typecheck", "nx run connect:lint"],
        "parallel": true
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "storybook dev -p 4402 --config-dir apps/connect/.storybook",
        "cwd": "{workspaceRoot}"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/storybook/connect"],
      "options": {
        "command": "storybook build --config-dir apps/connect/.storybook --output-dir dist/storybook/connect",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": ["type:app", "scope:app"]
}
