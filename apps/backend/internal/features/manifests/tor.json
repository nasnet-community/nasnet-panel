{
  "id": "tor",
  "name": "Tor Relay",
  "description": "Run a Tor relay or bridge to support the Tor anonymity network. Contribute bandwidth to help users access the internet privately and circumvent censorship.",
  "version": "1.0.0",
  "category": "Privacy",
  "author": "NasNetConnect",
  "license": "MIT",
  "homepage": "https://www.torproject.org",
  "icon": "tor-icon.svg",
  "tags": ["privacy", "anonymity", "tor", "proxy", "censorship-resistance"],
  "architectures": ["amd64", "arm64", "arm"],
  "min_routeros_version": "7.0",
  "required_packages": [],
  "required_ports": [9001, 9030],
  "required_memory_mb": 128,
  "required_disk_mb": 256,
  "docker_image": "nasnetconnect/tor-relay",
  "docker_tag": "latest",
  "docker_pull_policy": "if-not-present",
  "environment_vars": {
    "TOR_NICKNAME": "MyTorRelay",
    "TOR_CONTACT_INFO": "admin@example.com",
    "TOR_BANDWIDTH_RATE": "1000 KB",
    "TOR_BANDWIDTH_BURST": "2000 KB"
  },
  "volumes": [
    {
      "source": "/data/tor",
      "target": "/var/lib/tor",
      "read_only": false
    }
  ],
  "ports": [
    {
      "container_port": 9001,
      "host_port": 9001,
      "protocol": "tcp"
    },
    {
      "container_port": 9030,
      "host_port": 9030,
      "protocol": "tcp"
    }
  ],
  "network_mode": "bridge",
  "config_schema": {
    "type": "object",
    "properties": {
      "nickname": {
        "type": "string",
        "description": "Relay nickname (alphanumeric, max 19 chars)"
      },
      "contact_info": {
        "type": "string",
        "description": "Contact email for relay operator"
      },
      "bandwidth_rate": {
        "type": "string",
        "description": "Bandwidth rate limit (e.g., '1000 KB')"
      },
      "relay_type": {
        "type": "string",
        "enum": ["relay", "bridge"],
        "description": "Type of Tor node to run"
      }
    }
  },
  "default_config": {
    "nickname": "MyTorRelay",
    "contact_info": "admin@example.com",
    "bandwidth_rate": "1000 KB",
    "relay_type": "relay"
  },
  "pre_install_script": "",
  "post_install_script": "",
  "pre_uninstall_script": "",
  "health_check_script": "curl -s http://localhost:9030/tor/status || exit 1",
  "readme_url": "https://github.com/nasnetconnect/tor-relay/blob/main/README.md",
  "changelog_url": "https://github.com/nasnetconnect/tor-relay/blob/main/CHANGELOG.md",
  "support_url": "https://github.com/nasnetconnect/tor-relay/issues"
}
