{
  "id": "xray",
  "name": "Xray-core",
  "description": "Next-generation network toolkit supporting VMess, VLESS, Trojan, Shadowsocks, and more. Features advanced routing, traffic obfuscation, and multi-protocol support.",
  "version": "1.0.0",
  "category": "VPN",
  "author": "NasNetConnect",
  "license": "MIT",
  "homepage": "https://github.com/XTLS/Xray-core",
  "icon": "xray-icon.svg",
  "tags": ["vpn", "proxy", "vmess", "vless", "trojan", "shadowsocks", "xtls"],
  "architectures": ["amd64", "arm64", "arm"],
  "min_routeros_version": "7.0",
  "required_packages": [],
  "required_ports": [10086, 10087],
  "required_memory_mb": 64,
  "required_disk_mb": 128,
  "min_ram": 15728640,
  "recommended_ram": 31457280,
  "cpu_weight": 15,
  "docker_image": "nasnetconnect/xray-core",
  "docker_tag": "latest",
  "docker_pull_policy": "if-not-present",
  "environment_vars": {
    "XRAY_LOCATION_CONFIG": "/etc/xray/config.json",
    "XRAY_LOCATION_ASSET": "/usr/share/xray"
  },
  "volumes": [
    {
      "source": "/data/xray/config",
      "target": "/etc/xray",
      "read_only": false
    },
    {
      "source": "/data/xray/logs",
      "target": "/var/log/xray",
      "read_only": false
    }
  ],
  "ports": [
    {
      "container_port": 10086,
      "host_port": 10086,
      "protocol": "tcp"
    },
    {
      "container_port": 10087,
      "host_port": 10087,
      "protocol": "tcp"
    }
  ],
  "network_mode": "bridge",
  "config_schema": {
    "type": "object",
    "properties": {
      "protocol": {
        "type": "string",
        "enum": ["vmess", "vless", "trojan", "shadowsocks"],
        "description": "Proxy protocol"
      },
      "port": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535,
        "description": "Listening port"
      },
      "enable_xtls": {
        "type": "boolean",
        "description": "Enable XTLS protocol"
      }
    }
  },
  "default_config": {
    "protocol": "vless",
    "port": 10086,
    "enable_xtls": true
  },
  "pre_install_script": "",
  "post_install_script": "",
  "pre_uninstall_script": "",
  "health_check_script": "nc -z localhost 10086 || exit 1",
  "readme_url": "https://github.com/nasnetconnect/xray-core/blob/main/README.md",
  "changelog_url": "https://github.com/nasnetconnect/xray-core/blob/main/CHANGELOG.md",
  "support_url": "https://github.com/nasnetconnect/xray-core/issues"
}
