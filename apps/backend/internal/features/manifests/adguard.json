{
  "id": "adguard",
  "name": "AdGuard Home",
  "description": "Network-wide ad and tracker blocking DNS server. Protects all devices on your network from ads, tracking, and malicious domains with customizable filters.",
  "version": "1.0.0",
  "category": "DNS",
  "author": "NasNetConnect",
  "license": "MIT",
  "homepage": "https://adguard.com/adguard-home",
  "icon": "adguard-icon.svg",
  "tags": ["dns", "adblock", "privacy", "security", "parental-control"],
  "architectures": ["amd64", "arm64", "arm"],
  "min_routeros_version": "7.0",
  "required_packages": [],
  "required_ports": [53, 3000, 80],
  "required_memory_mb": 64,
  "required_disk_mb": 128,
  "min_ram": 31457280,
  "recommended_ram": 52428800,
  "cpu_weight": 25,
  "docker_image": "nasnetconnect/adguard-home",
  "docker_tag": "latest",
  "docker_pull_policy": "if-not-present",
  "environment_vars": {
    "TZ": "UTC"
  },
  "volumes": [
    {
      "source": "/data/adguard/work",
      "target": "/opt/adguardhome/work",
      "read_only": false
    },
    {
      "source": "/data/adguard/conf",
      "target": "/opt/adguardhome/conf",
      "read_only": false
    }
  ],
  "ports": [
    {
      "container_port": 53,
      "host_port": 53,
      "protocol": "tcp"
    },
    {
      "container_port": 53,
      "host_port": 53,
      "protocol": "udp"
    },
    {
      "container_port": 3000,
      "host_port": 3000,
      "protocol": "tcp"
    },
    {
      "container_port": 80,
      "host_port": 8053,
      "protocol": "tcp"
    }
  ],
  "network_mode": "bridge",
  "config_schema": {
    "type": "object",
    "properties": {
      "upstream_dns": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Upstream DNS servers"
      },
      "enable_filtering": {
        "type": "boolean",
        "description": "Enable DNS filtering"
      },
      "enable_safebrowsing": {
        "type": "boolean",
        "description": "Enable safe browsing"
      },
      "enable_parental": {
        "type": "boolean",
        "description": "Enable parental control"
      }
    }
  },
  "default_config": {
    "upstream_dns": ["8.8.8.8", "8.8.4.4"],
    "enable_filtering": true,
    "enable_safebrowsing": true,
    "enable_parental": false
  },
  "pre_install_script": "",
  "post_install_script": "",
  "pre_uninstall_script": "",
  "health_check_script": "curl -sf http://localhost:3000 || exit 1",
  "readme_url": "https://github.com/nasnetconnect/adguard-home/blob/main/README.md",
  "changelog_url": "https://github.com/nasnetconnect/adguard-home/blob/main/CHANGELOG.md",
  "support_url": "https://github.com/nasnetconnect/adguard-home/issues",
  "source": {
    "github_owner": "AdguardTeam",
    "github_repo": "AdGuardHome",
    "binary_name": "AdGuardHome",
    "archive_format": "tar.gz",
    "extract_path": "AdGuardHome",
    "asset_arch_map": {
      "amd64": "linux_amd64",
      "arm64": "linux_arm64",
      "arm": "linux_armv7"
    },
    "checksum_files": ["checksums.txt"]
  }
}
