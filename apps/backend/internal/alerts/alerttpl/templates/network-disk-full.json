{
  "id": "network-disk-full",
  "name": "Disk Space Critical",
  "description": "Alert when disk space is nearly full",
  "category": "NETWORK",
  "severity": "CRITICAL",
  "eventType": "device.disk.full",
  "isBuiltIn": true,
  "version": "1.0.0",
  "variables": [
    {
      "name": "DISK_THRESHOLD",
      "label": "Disk Usage Threshold",
      "type": "PERCENTAGE",
      "required": true,
      "defaultValue": "90",
      "min": 70,
      "max": 100,
      "unit": "percent",
      "description": "Disk usage percentage threshold"
    }
  ],
  "conditions": [
    {
      "field": "disk_usage",
      "operator": "GREATER_THAN",
      "value": "{{DISK_THRESHOLD}}"
    }
  ],
  "throttle": {
    "maxAlerts": 1,
    "periodSeconds": 1800,
    "groupByField": "device_id"
  },
  "channels": ["email", "inapp"]
}
