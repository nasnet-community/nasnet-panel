{
  "id": "dhcp-pool-exhausted",
  "name": "DHCP Pool Exhausted",
  "description": "Alert when DHCP pool is running out of addresses",
  "category": "DHCP",
  "severity": "CRITICAL",
  "eventType": "dhcp.lease.exhausted",
  "isBuiltIn": true,
  "version": "1.0.0",
  "variables": [
    {
      "name": "AVAILABLE_THRESHOLD",
      "label": "Available Addresses Threshold",
      "type": "PERCENTAGE",
      "required": true,
      "defaultValue": "10",
      "min": 1,
      "max": 50,
      "unit": "percent",
      "description": "Percentage of available addresses remaining"
    }
  ],
  "conditions": [
    {
      "field": "available_percentage",
      "operator": "LESS_THAN",
      "value": "{{AVAILABLE_THRESHOLD}}"
    }
  ],
  "throttle": {
    "maxAlerts": 1,
    "periodSeconds": 1800,
    "groupByField": "pool_name"
  },
  "channels": ["email", "inapp"]
}
