{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= '../'.repeat(projectRoot.split('/').length) %>dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.spec.tsx", "src/**/*.test.tsx"]
}
